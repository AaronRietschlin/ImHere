<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.asa.imhere" >

    <!-- Obviously, used to connect to the internet -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- Since this is a Foursquare app, we need location. Need fine for the GeoFencing API. -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <!-- Used for Google Analytics -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".IHApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".ui.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.SearchActivity"
            android:label="@string/app_name"
            android:parentActivityName=".ui.MainActivity" >

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.asa.imhere.ui.MainActivity" />

            <!-- The Search configuration -->
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name=".ui.DetailActivity"
            android:label="@string/title_activity_detail"
            android:parentActivityName=".ui.MainActivity" >

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.asa.imhere.ui.MainActivity" />
        </activity>
        <activity
            android:name=".ui.AuthWebViewActivity"
            android:label="@string/title_activity_web_auth" />
        <activity
            android:name=".ui.LoginActivity"
            android:label="@string/app_name" />

        <!-- Crashlytics -->
        <meta-data
            android:name="com.crashlytics.ApiKey"
            android:value="b344c215b676a6a8d50a29caa377cc2b69f935d5" />

        <!-- TODO - Maybe add this back in -->
        <!-- &lt;!&ndash; For ActiveAndroid &ndash;&gt; -->
        <!-- <meta-data -->
        <!-- android:name="AA_DB_NAME" -->
        <!-- android:value="favorites.db" /> -->
        <!-- <meta-data -->
        <!-- android:name="AA_DB_VERSION" -->
        <!-- android:value="1" /> -->


        <!-- Search Suggestion Provider -->

        <provider
            android:name=".SearchSuggestionContentProvider"
            android:authorities="com.asa.imhere.SearchSuggestionContentProvider" />
        <provider
            android:name=".model.IHContentPrvoider"
            android:authorities="com.asa.imhere.provider" />

        <!-- IntentService for the Geofencing. -->
        <service
            android:name=".GeofenceIntentService"
            android:exported="false"
            android:label="@string/app_name" />
        <service
            android:name=".service.CheckinService"
            android:exported="true" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
    </application>

    <uses-permission android:name="android.permission.VIBRATE" />

</manifest>
